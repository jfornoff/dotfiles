{
  "lib/*.ex": {
    "command": "lib",
    "template": [
      "defmodule {camelcase|capitalize|dot} do",
      "end"
    ],
    "type": "source",
    "alternate": [
      "test/{}_test.exs",
      "spec/{}_spec.exs"
    ]
  },
  "test/*_test.exs": {
    "command": "test",
    "template": [
      "defmodule {camelcase|capitalize|dot}Test do",
      "  use ExUnit.Case, async: true",
      "end"
    ],
    "type": "test",
    "alternate": "lib/{}.ex"
  },
  "spec/*_spec.exs": {
    "command": "spec",
    "template": [
      "defmodule {camelcase|capitalize|dot}Spec do",
      "  use ESpec, async: true",
      "end"
    ],
    "type": "test",
    "alternate": "lib/{}.ex"
  }
}
